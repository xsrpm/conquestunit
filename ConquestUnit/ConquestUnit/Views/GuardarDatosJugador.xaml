<Page
    x:Class="ConquestUnit.Views.GuardarDatosJugador"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConquestUnit.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--<TextBlock x:Name="txtTitulo" HorizontalAlignment="Left" Margin="194,38,0,0" TextWrapping="Wrap" Text="Bienvenido a Risk" VerticalAlignment="Top"/>
        <Image x:Name="imgFoto" HorizontalAlignment="Left" Height="100" Margin="210,88,0,0" VerticalAlignment="Top" Source="ms-appx:///Assets/DefaultUser.png" Width="100" Tapped="imgFoto_Tapped"/>
        <TextBlock x:Name="txtIngreseNombre" HorizontalAlignment="Left" Margin="210,218,0,0" TextWrapping="Wrap" Text="Ingrese su nombre:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="194,271,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="236,330,0,0" VerticalAlignment="Top" Tapped="btnGuardar_Tapped"/>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="236,388,0,0" VerticalAlignment="Top" Tapped="btnRegresar_Tapped"/>-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="phoneState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="tabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:Name="myStackPanel" Height="300" VerticalAlignment="Top">
            <TextBlock x:Name="lblNombreJugador" HorizontalAlignment="Right"  TextWrapping="Wrap" Text="Bienvenido a Risk" VerticalAlignment="Top" Margin="40"/>
            <Image x:Name="imgFoto" HorizontalAlignment="Center" VerticalAlignment="Top" Width="128" Source="ms-appx:///Assets/Images/user128x128.png" Tapped="imgFoto_Tapped"/>
        </StackPanel>
        <RelativePanel x:Name="myRelativePanel" Margin="0,300,0,0" >
            <TextBlock x:Name="txtIngreseNombre"  RelativePanel.AlignHorizontalCenterWithPanel ="True"  VerticalAlignment="Top"  Margin="20" TextWrapping="Wrap" Text="Ingresa su nombre"/>
            <TextBox x:Name="txtNombre" RelativePanel.AlignHorizontalCenterWithPanel ="True" RelativePanel.Below="txtIngreseNombre" Margin="20" TextWrapping="Wrap" Text="" Width="225" FontSize="36" TextAlignment="Center"/>
            <Button x:Name="btnGuardar" Content="Guardar" RelativePanel.AlignHorizontalCenterWithPanel ="True" RelativePanel.Below="txtNombre" Margin="20" Tapped="btnGuardar_Tapped"/>
            <Button x:Name="btnRegresar" Content="Regresar" RelativePanel.AlignHorizontalCenterWithPanel ="True" RelativePanel.Below="btnGuardar" Margin="20" Tapped="btnRegresar_Tapped"/>
        </RelativePanel>
    </Grid>
</Page>
