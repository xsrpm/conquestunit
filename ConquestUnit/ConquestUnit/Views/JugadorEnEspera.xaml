<Page
    x:Class="ConquestUnit.Views.JugadorEnEspera"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConquestUnit.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="phoneState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="pcState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="btnAtras.Width" Value="64"></Setter>
                        <Setter Target="btnAtras.Height" Value="64"></Setter>
                        <Setter Target="btnAtrasImage.Source" Value="ms-appx:///Assets/Images/Icons/back64x64.png"></Setter>
                        <Setter Target="lblNombreJugador.FontSize" Value="35"></Setter>
                        <!--<Setter Target="imgJugador.Source" Value="ms-appx:///Assets/Images/Icons/user64x64.png"></Setter>
                        <Setter Target="imgJugador.Width" Value="64"></Setter>
                        <Setter Target="imgJugador.Height" Value="64"></Setter>-->
                        <Setter Target="imgLogo.Margin" Value="0,-10,0,0"></Setter>
                        <Setter Target="imgLogo.Width" Value="150"></Setter>
                        <Setter Target="imgLogo.Height" Value="150"></Setter>
                        <Setter Target="lblCodigo.FontSize" Value="35"></Setter>
                        <Setter Target="lblMesaId.FontSize" Value="50"></Setter>
                        <Setter Target="myStackPanel.Height" Value="540"></Setter>
                        <Setter Target="myRelativePanel.Margin" Value="0,510,0,0"></Setter>
                        <Setter Target="lblNombre.FontSize" Value="35"></Setter>
                        <Setter Target="lblTextoEsperando.FontSize" Value="35"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:Name="myStackPanel" Height="400" VerticalAlignment="Top">
            <Grid x:Name="headerGrid">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".2*" />
                    <ColumnDefinition Width=".8*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="20" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0">
                    <Button x:Name="btnAtras" HorizontalAlignment="Left" VerticalAlignment="Top" Width="32" Height="32" Tapped="btnAtras_Tapped">
                        <Image x:Name="btnAtrasImage" Source="ms-appx:///Assets/Images/Icons/back32x32.png" Stretch="UniformToFill"/>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20" Grid.Row="1" Grid.Column="2">
                    <TextBlock x:Name="lblNombreJugador" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Bienvenido" Padding="5"/>
                    <Image x:Name="imgJugador" HorizontalAlignment="Right" VerticalAlignment="Top" Width="32" Height="32" Source="ms-appx:///Assets/Images/Icons/user32x32.png" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
            <Image x:Name="imgLogo" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="100" Source="ms-appx:///Assets/Images/Icons/logo128x128.png"/>
            <TextBlock x:Name="lblCodigo" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" TextWrapping="Wrap" Text="Codigo de mesa"/>
            <TextBlock x:Name="lblMesaId" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" TextWrapping="Wrap" Text="0000" FontSize="35"/>
            <Image x:Name="imgFoto" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Height="128" Width="128" Source="ms-appx:///Assets/Images/Icons/user128x128.png"/>
        </StackPanel>
        <RelativePanel x:Name="myRelativePanel" Margin="0,405,0,0" >
            <TextBlock x:Name="lblNombre" RelativePanel.AlignHorizontalCenterWithPanel="True" VerticalAlignment="Top" Margin="0,-5,0,0" TextWrapping="Wrap" Text="Nombre"/>
            <TextBlock x:Name="lblTextoEsperando" RelativePanel.AlignHorizontalCenterWithPanel="True" VerticalAlignment="Top" Margin="0,10,0,0" TextWrapping="Wrap" RelativePanel.Below="lblNombre" Text="Esperando el inicio del juego.."/>
        </RelativePanel>
    </Grid>
</Page>
