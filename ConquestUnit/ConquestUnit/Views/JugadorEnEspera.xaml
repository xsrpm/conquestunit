        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="168,355,0,0" VerticalAlignment="Top" Tapped="btnRegresar_Tapped"/>-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="phoneState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="tabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:Name="myStackPanel" Height="400" VerticalAlignment="Top">
            <TextBlock x:Name="lblNombreJugador" HorizontalAlignment="Right"  TextWrapping="Wrap" Text="Bienvenido" VerticalAlignment="Top" Margin="20"/>
            <Image x:Name="imgLogo" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="100" Source="ms-appx:///Assets/StoreLogo.png"/>
            <TextBlock x:Name="lblCodigo"  HorizontalAlignment="Center"   VerticalAlignment="Top"  Margin="5" TextWrapping="Wrap" Text="Codigo de mesa"/>
            <TextBlock x:Name="lblMesaId"   HorizontalAlignment="Center"  VerticalAlignment="Top"  Margin="5" TextWrapping="Wrap" Text="0000" FontSize="48"/>
            <Image x:Name="imgFoto" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="100" Source="ms-appx:///Assets/DefaultUser.png"/>
        </StackPanel>
        <RelativePanel x:Name="myRelativePanel" Margin="0,400,0,0" >
            <TextBlock x:Name="lblNombre"  RelativePanel.AlignHorizontalCenterWithPanel ="True"  VerticalAlignment="Top"  Margin="20" TextWrapping="Wrap" Text="Nombre"/>
            <TextBlock x:Name="lblTextoEsperando"  RelativePanel.AlignHorizontalCenterWithPanel ="True"  VerticalAlignment="Top"  Margin="20" TextWrapping="Wrap" RelativePanel.Below="lblNombre" Text="Esperando el inicio del juego.."/>
            <Button x:Name="btnRegresar" Content="Regresar" RelativePanel.AlignHorizontalCenterWithPanel ="True" RelativePanel.Below="lblTextoEsperando" Margin="20" Tapped="btnRegresar_Tapped"/>
        </RelativePanel>
    </Grid>
</Page>
