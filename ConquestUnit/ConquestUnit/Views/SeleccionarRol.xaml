        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="100" Margin="164,48,0,0" VerticalAlignment="Top" Width="100" Source="ms-appx:///Assets/StoreLogo.png"/>
        <TextBlock x:Name="lblTexto" HorizontalAlignment="Left" Margin="116,164,0,0" TextWrapping="Wrap" Text="Elige entre ser Mesa o Jugador" VerticalAlignment="Top"/>
        <Image x:Name="imgElegirMesa" HorizontalAlignment="Left" Margin="43,189,0,354" Source="ms-appx:///Assets/table.png" Tapped="imgElegirMesa_Tapped" Width="171" />
        <Image x:Name="imgElegirJugador" HorizontalAlignment="Left" Margin="253,189,0,354" Source="ms-appx:///Assets/DefaultUser.png" Tapped="imgElegirJugador_Tapped" Width="183"/>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="199,371,0,0" VerticalAlignment="Top" Tapped="btnRegresar_Tapped"/>-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="phoneState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="tabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:Name="myStackPanel" Height="200" VerticalAlignment="Top">
            <TextBlock x:Name="lblNombreJugador" HorizontalAlignment="Right"  TextWrapping="Wrap" Text="Bienvenido" VerticalAlignment="Top" Margin="20"/>
            <Image x:Name="imgLogo" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="100" Source="ms-appx:///Assets/StoreLogo.png"/>
            <TextBlock x:Name="lblTexto"  HorizontalAlignment="Center"   VerticalAlignment="Top"  Margin="5" TextWrapping="Wrap" Text="Elige entre ser Mesa o Jugador"/>
            <TextBlock x:Name="lblMesaId"   HorizontalAlignment="Center"  VerticalAlignment="Top"  Margin="5" TextWrapping="Wrap" Text="0000" FontSize="48"/>
        </StackPanel>
        <StackPanel x:Name="myStackPanel2" Height="200"  Orientation="Horizontal" Margin="0,200,0,240" >
            <Image x:Name="imgElegirMesa" Height="100"  Width="100" HorizontalAlignment="Center"  VerticalAlignment="Center"  Source="ms-appx:///Assets/table.png" Tapped="imgElegirMesa_Tapped"/>
            <Image x:Name="imgElegirJugador"  Height="100" Width="100" HorizontalAlignment="Center"  VerticalAlignment="Center" Source="ms-appx:///Assets/Images/user128x128.png" Tapped="imgElegirJugador_Tapped"/>
        </StackPanel>
        <RelativePanel x:Name="myRelativePanel"  Margin="0,400,0,0"  >

            <Button x:Name="btnRegresar" Content="Regresar" RelativePanel.AlignHorizontalCenterWithPanel ="True"  Margin="20" Tapped="btnRegresar_Tapped"/>
        </RelativePanel>
    </Grid>
</Page>
