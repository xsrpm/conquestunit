<Page
    x:Class="ConquestUnit.Views.Creditos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConquestUnit.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="Fondo" Stretch="Fill" ImageSource="ms-appx:///Assets/Pantallas/Phone/Fondo.jpg" />
        </Grid.Background>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="phoneState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="pcState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Fondo.ImageSource" Value="ms-appx:///Assets/Pantallas/PC/Fondo.png"></Setter>
                        <Setter Target="btnAtrasImage.Source" Value="ms-appx:///Assets/Pantallas/PC/BotonRegresar.png"></Setter>
                        <Setter Target="lblRegresar.FontSize" Value="35"></Setter>
                        <Setter Target="PanelRegresar.Margin" Value="20,20,100,0"></Setter>
                        <Setter Target="imgLogo.Margin" Value="0,-75,0,0"></Setter>
                        <Setter Target="imgLogo.Width" Value="250"></Setter>
                        <Setter Target="imgLogo.Height" Value="250"></Setter>
                        <Setter Target="myStackPanel.Height" Value="488"></Setter>
                        <Setter Target="myRelativePanel.Margin" Value="0,450,0,0"></Setter>
                        <Setter Target="FilaRegresar.Height" Value="140"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:Name="myStackPanel" Height="320" VerticalAlignment="Top">
            <Grid x:Name="headerGrid">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="FilaRegresar" Height="70" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".2*" />
                    <ColumnDefinition Width=".8*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="PanelRegresar" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Tapped="btnAtras_Tapped">
                    <Image x:Name="btnAtrasImage" Source="ms-appx:///Assets/Pantallas/Phone/BotonRegresar.png"/>
                    <TextBlock x:Name="lblRegresar" HorizontalAlignment="Center" Text="REGRESAR" FontSize="14" FontFamily="Calibri" />
                </StackPanel>
            </Grid>
            <Image x:Name="imgLogo" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,22,0,0" Width="200" Height="200" Source="ms-appx:///Assets/Images/Icons/logo300x300.png"/>
        </StackPanel>
        <RelativePanel x:Name="myRelativePanel" Margin="0,300,0,0">
            <TextBlock Text="El videojuego Conquest Unit " TextAlignment="Center"/>
            <TextBlock Text="fue elaborado en el curso de" TextAlignment="Center"/>
            <TextBlock Text="Taller de Proyecto." TextAlignment="Center"/>
            <TextBlock Text="Desarrollado por alumnos de" TextAlignment="Center"/>
            <TextBlock Text="Ingenieria de Software" TextAlignment="Center"/>
            <TextBlock Text=" de la Universidad Peruana de" TextAlignment="Center"/>
            <TextBlock Text="Ciencias Aplicadas" TextAlignment="Center"/>
            <TextBlock Text="PROGRAMADORES" TextAlignment="Center"/>
            <TextBlock Text="César Palma" TextAlignment="Center"/>
            <TextBlock Text="Roy Taza" TextAlignment="Center"/>
            <TextBlock Text="DISEÑADORA" TextAlignment="Center"/>
            <TextBlock Text="Christian Moscol" TextAlignment="Center"/>
            <TextBlock Text="ASESOR" TextAlignment="Center"/>
            <TextBlock Text="Alfredo Barrientos" TextAlignment="Center"/>
        </RelativePanel>
    </Grid>
</Page>
