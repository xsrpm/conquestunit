<Page
    x:Class="ConquestUnit.Views.MenuPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConquestUnit.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--<TextBlock x:Name="txtBienvenido" HorizontalAlignment="Left" Margin="194,137,0,0" TextWrapping="Wrap" Text="Bienvenido" VerticalAlignment="Top"/>
        <Image x:Name="imgJugador" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="194,197,0,0" Source="ms-appx:///Assets/DefaultUser.png"/>
        <Button x:Name="btnJugar" Content="Jugar" HorizontalAlignment="Left" Margin="194,349,0,0" VerticalAlignment="Top" Tapped="btnJugar_Tapped"/>
        <Button x:Name="btnComoJugar" Content="Como Jugar" HorizontalAlignment="Left" Margin="194,411,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCreditos" Content="Creditos" HorizontalAlignment="Left" Margin="194,479,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEditar" Content="Editar mi Info" HorizontalAlignment="Left" Margin="249,77,0,0" VerticalAlignment="Top" Tapped="btnEditar_Tapped"/>-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="phoneState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="myStackPanel.Orientation" Value="Vertical"></Setter>
                        <!--<Setter Target="myStackPanel2.Orientation" Value="Vertical"></Setter>-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="tabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="imgJugador.Source" Value="ms-appx:///Assets/Images/user64x64.png"></Setter>
                        <Setter Target="imgJugador.Width" Value="68"></Setter>
                        <Setter Target="imgJugador.Height" Value="68"></Setter>
                        <Setter Target="btnJugar.(Grid.Row)" Value="4"></Setter>
                        <Setter Target="btnComoJugar.(Grid.Row)" Value="4"></Setter>
                        <Setter Target="btnCreditos.(Grid.Row)" Value="4"></Setter>
                        <Setter Target="btnComoJugar.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="btnCreditos.(Grid.Column)" Value="2"></Setter>
                        <Setter Target="txtBienvenido.FontSize" Value="50"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel x:Name="myStackPanel" Height="320" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <TextBlock x:Name="txtBienvenido" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Bienvenido" Padding="14" VerticalAlignment="Top" />
                <Image x:Name="imgJugador" HorizontalAlignment="Right" VerticalAlignment="Top" Width="48" Height="48" Source="ms-appx:///Assets/Images/user48x48.png" Tapped="imgJugador_Tapped"/>
            </StackPanel>
            <Image x:Name="imgInfo" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-10,20,10" Height="48" Width="48" Source="ms-appx:///Assets/Images/info48x48.png"/>
            <Image x:Name="imgLogo" HorizontalAlignment="Center" VerticalAlignment="Top" Width="128" Height="128" Source="ms-appx:///Assets/Images/logo128x128.png"/>
        </StackPanel>
        <Grid x:Name="myGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="btnJugar" Content="Jugar" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"  Grid.Row="3" Margin="20" />
            <Button x:Name="btnComoJugar" Content="Como Jugar"  HorizontalAlignment="Center" VerticalAlignment="Top"   Grid.Column="1" Grid.Row="4" Margin="20"  Tapped="btnJugar_Tapped"/>
            <Button x:Name="btnCreditos" Content="Creditos"  HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="5" Margin="20" />

        </Grid>
    </Grid>
</Page>
